{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ddlaAccepted": {
      "description": "Indicates whether the user has accepted the Data Deposition and License Agreement (DDLA)",
      "type": "boolean"
    },
    "metadata": {
      "description": "Metadata of the dataset",
      "$ref": "metadata-schema.json#"
    },
    "files": {
      "description": "Files",
      "type": "object"
    },
    "s3access": {
      "description": "S3 access info",
      "type": "object"
    },
    "file_transfer_mode": {
      "description": "File transfer mode",
      "type": "string",
      "enum": ["s3", "manual_upload"]
    }
  }
}
