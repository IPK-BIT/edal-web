{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "description": "Title of the dataset.",
      "type": "string"
    },
    "description": {
      "description": "Detailed description of the dataset.",
      "type": "string"
    },
    "authors": {
      "description": "List of authors of the dataset.",
      "type": "array",
      "items": {
        "$ref": "person-schema.json#"
      }
    },
    "language": {
      "description": "Language of the dataset content.",
      "type": "string"
    },
    "subjects": {
      "description": "List of keywords associated with the dataset.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "license": {
      "description": "License under which the dataset is released.",
      "type": "string"
    },
    "embargoDate": {
      "description": "Date until which the dataset is under embargo.",
      "type": "string",
      "format": "date"
    }
  }
}